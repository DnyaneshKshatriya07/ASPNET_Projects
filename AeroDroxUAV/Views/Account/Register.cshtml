@{
    ViewData["Title"] = "Register";
    var isAdmin = ViewBag.IsAdminLoggedIn as bool? ?? false;
}

<style>
    .register-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        padding: 40px 0;
        position: relative;
        overflow: hidden;
    }
    
    .register-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        animation: slideIn 0.8s ease-out;
    }
    
    .drone-animation-container {
        height: 100px;
        position: relative;
        margin-bottom: 20px;
    }
    
    .drone {
        position: absolute;
        font-size: 3rem;
        color: #667eea;
        animation: droneFloat 3s ease-in-out infinite;
    }
    
    .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
    }
    
    .floating-element {
        position: absolute;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        animation: floatRandom 15s infinite linear;
    }
    
    .form-control-animated {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .form-control-animated:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        transform: translateY(-2px);
    }
    
    .form-control-animated::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #667eea, transparent);
        transition: left 0.5s ease;
    }
    
    .form-control-animated:focus::after {
        left: 100%;
    }
    
    .btn-register {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 12px 30px;
        border-radius: 10px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .btn-register::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s ease;
    }
    
    .btn-register:hover::before {
        left: 100%;
    }
    
    .btn-register:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }
    
    .password-strength {
        height: 4px;
        background: #e0e0e0;
        border-radius: 2px;
        margin-top: 5px;
        overflow: hidden;
    }
    
    .strength-bar {
        height: 100%;
        width: 0%;
        border-radius: 2px;
        transition: all 0.3s ease;
    }
    
    .ripple {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: scale(0);
        animation: ripple 1s linear;
        pointer-events: none;
    }
    
    .checkmark {
        display: inline-block;
        width: 22px;
        height: 22px;
        background: #28a745;
        border-radius: 50%;
        color: white;
        line-height: 22px;
        text-align: center;
        margin-right: 10px;
        animation: popIn 0.3s ease;
    }
    
    .step-indicator {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .step {
        width: 30px;
        height: 30px;
        border: 2px solid #667eea;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #667eea;
        background: white;
        transition: all 0.3s ease;
    }
    
    .step.active {
        background: #667eea;
        color: white;
        transform: scale(1.2);
    }
    
    .progress-line {
        flex: 1;
        height: 2px;
        background: #e0e0e0;
        margin: 0 10px;
        position: relative;
        top: 15px;
    }
</style>

<style>
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(50px) scale(0.9);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
    
    @@keyframes droneFloat {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }
    
    @@keyframes floatRandom {
        0% {
            transform: translateY(100vh) translateX(0) rotate(0deg);
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            transform: translateY(-100px) translateX(100px) rotate(360deg);
            opacity: 0;
        }
    }
    
    @@keyframes ripple {
        to {
            transform: scale(4);
            opacity: 0;
        }
    }
    
    @@keyframes popIn {
        0% {
            transform: scale(0);
        }
        70% {
            transform: scale(1.2);
        }
        100% {
            transform: scale(1);
        }
    }
    
    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }
</style>

<div class="register-container">
    <div class="floating-elements" id="floatingElements"></div>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="register-card p-4">
                    <!-- Step Indicator -->
                    <div class="step-indicator">
                        <div class="step active">1</div>
                        <div class="progress-line"></div>
                        <div class="step">2</div>
                        <div class="progress-line"></div>
                        <div class="step">3</div>
                    </div>
                    
                    <!-- Drone Animation -->
                    <div class="drone-animation-container text-center">
                        <i class="fas fa-drone drone" style="left: calc(50% - 24px);"></i>
                    </div>
                    
                    <h3 class="text-center mb-4 text-gradient">
                        <i class="fas fa-user-plus me-2"></i>
                        @(isAdmin ? "Create Account" : "Join AeroDrox UAV")
                    </h3>
                    
                    <form method="post" asp-controller="Account" asp-action="Register" id="registerForm">
                        <div class="row">
                            <!-- Full Name -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-user me-2"></i>Full Name
                                </label>
                                <input type="text" name="FullName" class="form-control form-control-animated" 
                                       placeholder="Enter your full name" required>
                            </div>
                            
                            <!-- Username -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-at me-2"></i>Username
                                </label>
                                <input type="text" name="Username" class="form-control form-control-animated" 
                                       placeholder="Choose a username" required>
                            </div>
                        </div>
                        
                        <div class="row">
                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2"></i>Email Address
                                </label>
                                <input type="email" name="Email" class="form-control form-control-animated" 
                                       placeholder="your@email.com" required>
                            </div>
                            
                            <!-- Mobile -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-phone me-2"></i>Mobile Number
                                </label>
                                <input type="tel" name="MobileNumber" class="form-control form-control-animated" 
                                       placeholder="9876543210" pattern="[0-9]{10}" required>
                            </div>
                        </div>
                        
                        <div class="row">
                            <!-- Password -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2"></i>Password
                                </label>
                                <input type="password" name="Password" class="form-control form-control-animated" 
                                       id="password" placeholder="Enter password" required>
                                <div class="password-strength">
                                    <div class="strength-bar" id="strengthBar"></div>
                                </div>
                                <small class="text-muted">Minimum 6 characters</small>
                            </div>
                            
                            <!-- Confirm Password -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2"></i>Confirm Password
                                </label>
                                <input type="password" name="ConfirmPassword" class="form-control form-control-animated" 
                                       id="confirmPassword" placeholder="Confirm password" required>
                                <div class="d-flex align-items-center mt-2">
                                    <span class="checkmark" id="passwordMatchCheck" style="display: none;">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <small id="passwordMatchText" class="text-muted">Passwords must match</small>
                                </div>
                            </div>
                        </div>
                        
                        @if (isAdmin)
                        {
                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-user-tag me-2"></i>Role
                                </label>
                                <select name="Role" class="form-select form-control-animated">
                                    <option value="User">User</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" name="Role" value="User" />
                        }
                        
                        <!-- Terms -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="#" class="text-primary">Terms & Conditions</a>
                                </label>
                            </div>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-register">
                                <i class="fas fa-rocket me-2"></i>
                                @(isAdmin ? "Create Account" : "Launch Registration")
                            </button>
                        </div>
                        
                        @if (!isAdmin)
                        {
                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Already have an account? 
                                    <a asp-action="Login" class="text-primary fw-bold text-decoration-none">
                                        <i class="fas fa-sign-in-alt me-1"></i>Sign In
                                    </a>
                                </p>
                            </div>
                        }
                    </form>
                    
                    @if(ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-4" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                        </div>
                    }
                </div>
                
                <!-- Security Badge -->
                @if (!isAdmin)
                {
                    <div class="text-center mt-4">
                        <div class="d-inline-flex align-items-center bg-white p-3 rounded-pill shadow-sm">
                            <i class="fas fa-shield-alt text-success me-2"></i>
                            <span class="text-muted">Secure & Encrypted Registration</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Create floating elements
            function createFloatingElements() {
                const container = $('#floatingElements');
                for (let i = 0; i < 15; i++) {
                    const element = $('<div class="floating-element"></div>');
                    const size = Math.random() * 15 + 5;
                    const isCircle = Math.random() > 0.5;
                    
                    element.css({
                        width: size + 'px',
                        height: size + 'px',
                        left: Math.random() * 100 + '%',
                        background: isCircle ? 'rgba(255,255,255,0.2)' : 'rgba(102, 126, 234, 0.2)',
                        animationDelay: Math.random() * 15 + 's',
                        animationDuration: Math.random() * 20 + 10 + 's'
                    });
                    
                    container.append(element);
                }
            }
            
            createFloatingElements();
            
            // Password strength indicator
            $('#password').on('input', function() {
                const password = $(this).val();
                let strength = 0;
                
                if (password.length >= 6) strength += 25;
                if (/[A-Z]/.test(password)) strength += 25;
                if (/[0-9]/.test(password)) strength += 25;
                if (/[^A-Za-z0-9]/.test(password)) strength += 25;
                
                const bar = $('#strengthBar');
                bar.css('width', strength + '%');
                
                if (strength < 25) {
                    bar.css('background', '#dc3545');
                } else if (strength < 50) {
                    bar.css('background', '#ffc107');
                } else if (strength < 75) {
                    bar.css('background', '#17a2b8');
                } else {
                    bar.css('background', '#28a745');
                }
            });
            
            // Password match check
            function checkPasswordMatch() {
                const password = $('#password').val();
                const confirm = $('#confirmPassword').val();
                const check = $('#passwordMatchCheck');
                const text = $('#passwordMatchText');
                
                if (confirm.length === 0) {
                    check.hide();
                    text.text('Passwords must match').removeClass('text-success text-danger').addClass('text-muted');
                    return false;
                }
                
                if (password === confirm) {
                    check.show().addClass('animate__animated animate__bounceIn');
                    text.text('Passwords match').removeClass('text-muted text-danger').addClass('text-success');
                    return true;
                } else {
                    check.hide();
                    text.text('Passwords do not match').removeClass('text-muted text-success').addClass('text-danger');
                    return false;
                }
            }
            
            $('#password, #confirmPassword').on('input', checkPasswordMatch);
            
            // Mobile number formatting
            $('#mobileNumber').on('input', function() {
                this.value = this.value.replace(/\D/g, '').slice(0, 10);
            });
            
            // Ripple effect on form controls
            $('.form-control-animated').on('focus', function(e) {
                const $this = $(this);
                const parentOffset = $this.offset();
                const x = e.pageX - parentOffset.left;
                const y = e.pageY - parentOffset.top;
                
                const ripple = $('<span class="ripple"></span>').css({
                    left: x,
                    top: y,
                    width: '20px',
                    height: '20px'
                });
                
                $this.append(ripple);
                setTimeout(() => ripple.remove(), 1000);
            });
            
            // Form submission
            $('#registerForm').submit(function(e) {
                e.preventDefault();
                
                if (!this.checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    
                    // Shake invalid fields
                    $(this).find(':invalid').each(function() {
                        $(this).addClass('animate__animated animate__shakeX');
                        setTimeout(() => {
                            $(this).removeClass('animate__animated animate__shakeX');
                        }, 500);
                    });
                    
                    return false;
                }
                
                if (!checkPasswordMatch()) {
                    $('#confirmPassword').addClass('animate__animated animate__shakeX');
                    setTimeout(() => {
                        $('#confirmPassword').removeClass('animate__animated animate__shakeX');
                    }, 500);
                    return false;
                }
                
                if (!$('#terms').is(':checked')) {
                    $('#terms').addClass('animate__animated animate__shakeX');
                    setTimeout(() => {
                        $('#terms').removeClass('animate__animated animate__shakeX');
                    }, 500);
                    return false;
                }
                
                // Show loading animation
                const btn = $(this).find('button[type="submit"]');
                const originalHtml = btn.html();
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Processing...').prop('disabled', true);
                
                // Simulate drone takeoff animation
                $('.drone').addClass('animate__animated animate__bounceOutUp');
                
                // Submit after animation
                setTimeout(() => {
                    this.submit();
                }, 1000);
                
                return true;
            });
            
            // Animate step indicator on input focus
            $('input').on('focus', function() {
                const step = $(this).closest('.row').index() + 1;
                $('.step').removeClass('active');
                $(`.step:nth-child(${step * 2 - 1})`).addClass('active');
            });
        });
    </script>
}