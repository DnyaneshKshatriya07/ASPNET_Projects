@{
    ViewData["Title"] = "Register";
    var isAdmin = ViewBag.IsAdminLoggedIn as bool? ?? false;
}

<style>
    .register-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        padding: 20px 0;
        position: relative;
        overflow: hidden;
    }
    
    .register-card {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        animation: slideIn 0.6s ease-out;
        position: relative;
        max-width: 700px;
        margin: 0 auto;
    }
    
    .register-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 25px 20px;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
        border-radius: 15px 15px 0 0;
    }
    
    .register-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('/background/logo.png') center/contain no-repeat;
        opacity: 0.1;
    }
    
    .form-container {
        padding: 30px;
        background: white;
        border-radius: 0 0 15px 15px;
    }
    
    .form-title {
        color: #333;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 1.75rem;
        position: relative;
        display: inline-block;
    }
    
    .form-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 40px;
        height: 3px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
    }
    
    .form-subtitle {
        color: #666;
        font-size: 0.95rem;
        margin-bottom: 25px;
    }
    
    .input-group-custom {
        position: relative;
        margin-bottom: 20px;
    }
    
    .input-label {
        display: block;
        margin-bottom: 6px;
        color: #555;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .form-input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #f8f9fa;
    }
    
    .form-input:focus {
        outline: none;
        border-color: #667eea;
        background: white;
        box-shadow: 0 3px 10px rgba(102, 126, 234, 0.1);
        transform: translateY(-1px);
    }
    
    .form-input::placeholder {
        color: #aaa;
        font-size: 0.9rem;
    }
    
    .input-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        opacity: 0.7;
        font-size: 0.9rem;
        pointer-events: none;
    }
    
    .btn-submit {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        margin-top: 15px;
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }
    
    .btn-submit:active {
        transform: translateY(0);
    }
    
    .link-text {
        text-align: center;
        margin-top: 20px;
        color: #666;
        font-size: 0.9rem;
    }
    
    .link-text a {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        display: inline-block;
        font-size: 0.9rem;
    }
    
    .link-text a::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: #667eea;
        transition: width 0.3s ease;
    }
    
    .link-text a:hover::after {
        width: 100%;
    }
    
    .error-message {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
        color: white;
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        animation: slideIn 0.5s ease-out;
    }
    
    .success-message {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        animation: slideIn 0.5s ease-out;
    }
    
    .row-custom {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 5px;
    }
    
    .col-custom {
        flex: 1;
        min-width: calc(50% - 7.5px);
    }
    
    .logo-container {
        text-align: center;
        margin-bottom: 15px;
    }
    
    .logo {
        max-width: 60px;
        height: auto;
        margin-bottom: 10px;
        filter: drop-shadow(0 3px 10px rgba(0, 0, 0, 0.15));
    }
    
    .brand-name {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 5px;
        letter-spacing: 0.5px;
    }
    
    .tagline {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.8rem;
        letter-spacing: 1.5px;
        text-transform: uppercase;
    }
    
    .form-check-custom {
        margin-top: 15px;
        display: flex;
        align-items: flex-start;
        gap: 8px;
    }
    
    .form-check-custom input[type="checkbox"] {
        width: 18px;
        height: 18px;
        margin-top: 1px;
        cursor: pointer;
        border: 2px solid #e0e0e0;
        border-radius: 4px;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }
    
    .form-check-custom input[type="checkbox"]:checked {
        background-color: #667eea;
        border-color: #667eea;
    }
    
    .form-check-custom label {
        color: #555;
        font-size: 0.9rem;
        line-height: 1.4;
    }
    
    .form-check-custom a {
        color: #667eea;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .form-check-custom a:hover {
        text-decoration: underline;
    }
    
    @@media (max-width: 768px) {
        .col-custom {
            min-width: 100%;
        }
        
        .row-custom {
            gap: 10px;
        }
        
        .form-container {
            padding: 25px 20px;
        }
        
        .register-header {
            padding: 20px 15px;
        }
    }
</style>

<style>
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="register-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="register-card">
                    <!-- Header with Logo -->
                    <div class="register-header">
                        <div class="logo-container">
                            <img src="/background/logo.png" alt="AeroDrox UAV" class="logo">
                            <div class="brand-name">AeroDrox UAV</div>
                            <div class="tagline">UNLOCK YOUR WORLD</div>
                        </div>
                    </div>
                    
                    <!-- Form Container -->
                    <div class="form-container">
                        <h2 class="form-title">@(isAdmin ? "Create Account" : "Sign Up")</h2>
                        <p class="form-subtitle">Create your account to unlock the world of possibilities</p>
                        
                        @if(ViewBag.Error != null)
                        {
                            <div class="error-message">
                                <i class="fas fa-exclamation-triangle"></i>
                                @ViewBag.Error
                            </div>
                        }
                        
                        @if(TempData["Success"] != null)
                        {
                            <div class="success-message">
                                <i class="fas fa-check-circle"></i>
                                @TempData["Success"]
                            </div>
                        }
                        
                        <form method="post" asp-controller="Account" asp-action="Register" id="registerForm">
                            <!-- Row 1: Full Name & Username -->
                            <div class="row-custom">
                                <div class="col-custom">
                                    <div class="input-group-custom">
                                        <label class="input-label">Full Name</label>
                                        <input type="text" name="FullName" class="form-input" 
                                               placeholder="Enter full name" required>
                                        <i class="fas fa-user input-icon"></i>
                                    </div>
                                </div>
                                
                                <div class="col-custom">
                                    <div class="input-group-custom">
                                        <label class="input-label">Username</label>
                                        <input type="text" name="Username" class="form-input" 
                                               placeholder="Choose username" required>
                                        <i class="fas fa-at input-icon"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Row 2: Email & Mobile -->
                            <div class="row-custom">
                                <div class="col-custom">
                                    <div class="input-group-custom">
                                        <label class="input-label">Email Address</label>
                                        <input type="email" name="Email" class="form-input" 
                                               placeholder="your@email.com" required>
                                        <i class="fas fa-envelope input-icon"></i>
                                    </div>
                                </div>
                                
                                <div class="col-custom">
                                    <div class="input-group-custom">
                                        <label class="input-label">Mobile Number</label>
                                        <input type="tel" name="MobileNumber" class="form-input" 
                                               placeholder="9876543210" pattern="[0-9]{10}" required>
                                        <i class="fas fa-phone input-icon"></i>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Row 3: Password & Confirm Password -->
                            <div class="row-custom">
                                <div class="col-custom">
                                    <div class="input-group-custom">
                                        <label class="input-label">Password</label>
                                        <input type="password" name="Password" class="form-input" 
                                               id="password" placeholder="Enter password" required>
                                        <i class="fas fa-lock input-icon" id="passwordIcon"></i>
                                    </div>
                                </div>
                                
                                <div class="col-custom">
                                    <div class="input-group-custom">
                                        <label class="input-label">Confirm Password</label>
                                        <input type="password" name="ConfirmPassword" class="form-input" 
                                               id="confirmPassword" placeholder="Confirm password" required>
                                        <i class="fas fa-lock input-icon" id="confirmPasswordIcon"></i>
                                    </div>
                                </div>
                            </div>
                            
                            @if (isAdmin)
                            {
                                <div class="input-group-custom">
                                    <label class="input-label">Role</label>
                                    <select name="Role" class="form-input">
                                        <option value="User">User</option>
                                        <option value="Admin">Admin</option>
                                    </select>
                                    <i class="fas fa-user-tag input-icon"></i>
                                </div>
                            }
                            else
                            {
                                <input type="hidden" name="Role" value="User" />
                            }
                            
                            <!-- Terms & Conditions -->
                            <div class="form-check-custom">
                                <input class="form-check-input" type="checkbox" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="#" class="text-primary">Terms & Conditions</a>
                                </label>
                            </div>
                            
                            <!-- Submit Button -->
                            <button type="submit" class="btn-submit">
                                <i class="fas fa-rocket me-2"></i>
                                @(isAdmin ? "Create Account" : "Sign Up")
                            </button>
                        </form>
                        
                        @if (!isAdmin)
                        {
                            <div class="link-text">
                                Already have an account? 
                                <a asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Sign In
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Password match check
            function checkPasswordMatch() {
                const password = $('#password').val();
                const confirm = $('#confirmPassword').val();
                const confirmIcon = $('#confirmPasswordIcon');
                
                if (confirm.length === 0) {
                    confirmIcon.css('color', '#667eea');
                    confirmIcon.removeClass('fa-check').addClass('fa-lock');
                    return false;
                }
                
                if (password === confirm) {
                    confirmIcon.css('color', '#28a745');
                    confirmIcon.removeClass('fa-lock').addClass('fa-check');
                    return true;
                } else {
                    confirmIcon.css('color', '#dc3545');
                    confirmIcon.removeClass('fa-check').addClass('fa-lock');
                    return false;
                }
            }
            
            $('#password, #confirmPassword').on('input', checkPasswordMatch);
            
            // Show/Hide password toggle
            $('#password').on('input', function() {
                const icon = $('#passwordIcon');
                const password = $(this).val();
                
                if (password.length > 0) {
                    icon.removeClass('fa-lock').addClass('fa-eye');
                    icon.css('cursor', 'pointer');
                    icon.css('pointer-events', 'auto');
                    
                    icon.off('click').on('click', function() {
                        const passwordInput = $('#password');
                        if (passwordInput.attr('type') === 'password') {
                            passwordInput.attr('type', 'text');
                            icon.removeClass('fa-eye').addClass('fa-eye-slash');
                        } else {
                            passwordInput.attr('type', 'password');
                            icon.removeClass('fa-eye-slash').addClass('fa-eye');
                        }
                    });
                } else {
                    icon.removeClass('fa-eye fa-eye-slash').addClass('fa-lock');
                    icon.css('cursor', 'default');
                    icon.css('pointer-events', 'none');
                    icon.off('click');
                }
            });
            
            // Form submission
            $('#registerForm').submit(function(e) {
                e.preventDefault();
                
                if (!this.checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    
                    $(this).find(':invalid').each(function() {
                        $(this).addClass('animate__animated animate__shakeX');
                        setTimeout(() => {
                            $(this).removeClass('animate__animated animate__shakeX');
                        }, 500);
                    });
                    
                    return false;
                }
                
                if (!checkPasswordMatch()) {
                    $('#confirmPassword').addClass('animate__animated animate__shakeX');
                    setTimeout(() => {
                        $('#confirmPassword').removeClass('animate__animated animate__shakeX');
                    }, 500);
                    return false;
                }
                
                if (!$('#terms').is(':checked')) {
                    $('#terms').addClass('animate__animated animate__shakeX');
                    setTimeout(() => {
                        $('#terms').removeClass('animate__animated animate__shakeX');
                    }, 500);
                    return false;
                }
                
                const btn = $(this).find('button[type="submit"]');
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Processing...').prop('disabled', true);
                
                setTimeout(() => {
                    this.submit();
                }, 800);
                
                return true;
            });
        });
    </script>
}