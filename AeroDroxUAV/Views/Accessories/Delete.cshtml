@model AeroDroxUAV.Models.Accessories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Accessory";
}

<h2>Delete Accessory</h2>

<p>Are you sure you want to delete this accessory?</p>

<div>
    <h4>@Model.Name (@Model.Type)</h4>
    <p>Price: @Model.Price</p>
    <p>Description: @Model.Description</p>
</div>

<form method="post" asp-controller="Accessories" asp-action="Delete">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Accessories/Index" class="btn btn-secondary">Cancel</a>
</form>