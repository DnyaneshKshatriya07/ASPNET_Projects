@model AeroDroxUAV.Models.Accessories
@{
    ViewData["Title"] = Model.Name + " - Details";
    var discountPercentage = 0;
    if (Model.DiscountPrice.HasValue && Model.DiscountPrice > 0)
    {
        discountPercentage = (int)Math.Round(((Model.Price - Model.DiscountPrice.Value) / Model.Price) * 100, 0);
    }
}

<div class="container py-4">
    <div class="row">
        <!-- Product Images -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded-3" 
                                 alt="@Model.Name" style="max-height: 350px; object-fit: contain;">
                        }
                        else
                        {
                            <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                                 class="img-fluid rounded-3" 
                                 alt="@Model.Name" style="max-height: 350px; object-fit: contain;">
                        }
                    </div>
                    
                    <!-- Stock Status -->
                    <div class="alert @(Model.StockQuantity > 0 ? "alert-success" : "alert-warning") mb-3 p-3">
                        <div class="d-flex align-items-center">
                            <i class="fas @(Model.StockQuantity > 0 ? "fa-check-circle" : "fa-exclamation-triangle") me-3 fa-lg"></i>
                            <div>
                                <h6 class="alert-heading mb-1">
                                    @(Model.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                </h6>
                                <p class="mb-0 small">
                                    @if(Model.StockQuantity > 0)
                                    {
                                        <span>@Model.StockQuantity units available</span>
                                    }
                                    else
                                    {
                                        <span>Currently unavailable. Check back soon!</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Product Details -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <!-- Badges -->
                    <div class="mb-3">
                        @if(!string.IsNullOrEmpty(Model.Condition))
                        {
                            <span class="badge @(Model.Condition == "New" ? "bg-success" : Model.Condition == "Refurbished" ? "bg-warning" : "bg-secondary") me-2 mb-2 small">
                                @Model.Condition
                            </span>
                        }
                    </div>
                    
                    <!-- Product Title -->
                    <h1 class="h2 fw-bold mb-3">@Model.Name</h1>
                    
                    <!-- Price Display -->
                    <div class="d-flex align-items-center mb-3">
                        @if (Model.DiscountPrice.HasValue)
                        {
                            <div>
                                <h2 class="text-success fw-bold me-3">₹@Model.DiscountPrice.Value.ToString("N2")</h2>
                                <h4 class="text-muted text-decoration-line-through small">₹@Model.Price.ToString("N2")</h4>
                                <span class="badge bg-danger small">
                                    Save @discountPercentage%
                                </span>
                            </div>
                        }
                        else
                        {
                            <h2 class="text-success fw-bold me-3">₹@Model.Price.ToString("N2")</h2>
                        }
                        
                        @if(Model.StockQuantity > 0)
                        {
                            <span class="text-muted ms-3 small">+ Free Shipping</span>
                        }
                    </div>
                    
                    <!-- Description -->
                    <div class="mb-3">
                        <h4 class="h5 mb-2">
                            <i class="fas fa-align-left me-2"></i>Description
                        </h4>
                        <p class="text-muted small">@Model.Description</p>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        @if(Model.StockQuantity > 0)
                        {
                            <button class="btn btn-success py-2">
                                <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                            </button>
                            <button class="btn btn-outline-success py-2">
                                <i class="fas fa-bolt me-2"></i>Buy Now
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary py-2" disabled>
                                <i class="fas fa-times-circle me-2"></i>Out of Stock
                            </button>
                            <button class="btn btn-outline-success py-2">
                                <i class="fas fa-bell me-2"></i>Notify When Available
                            </button>
                        }
                        
                        <a href="/Accessories/Index" class="btn btn-outline-secondary py-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to Store
                        </a>
                    </div>
                    
                    <!-- Additional Info -->
                    <div class="mt-3 pt-3 border-top">
                        <div class="row text-center">
                            <div class="col-md-4 mb-2">
                                <div class="bg-light p-2 rounded">
                                    <i class="fas fa-shipping-fast fa-lg text-success mb-1"></i>
                                    <h6 class="fw-bold mb-1 small">Free Shipping</h6>
                                    <p class="text-muted small mb-0">On orders over ₹1000</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="bg-light p-2 rounded">
                                    <i class="fas fa-shield-alt fa-lg text-primary mb-1"></i>
                                    <h6 class="fw-bold mb-1 small">1-Year Warranty</h6>
                                    <p class="text-muted small mb-0">Quality guaranteed</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="bg-light p-2 rounded">
                                    <i class="fas fa-undo fa-lg text-info mb-1"></i>
                                    <h6 class="fw-bold mb-1 small">30-Day Return</h6>
                                    <p class="text-muted small mb-0">Easy returns</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }
    
    .badge {
        font-size: 0.8rem;
        padding: 0.4em 0.8em;
        border-radius: 50px;
    }
    
    .btn-success {
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .btn-success:hover {
        background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(32, 201, 151, 0.3);
    }
    
    .text-decoration-line-through {
        text-decoration: line-through !important;
    }
    
    .small {
        font-size: 0.875rem;
    }
</style>