@model AeroDroxUAV.Models.Accessories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Accessory";
}

<h2>Edit Accessory</h2>

<form method="post" asp-controller="Accessories" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Type</label>
        <input asp-for="Type" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" step="0.01" required />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update Accessory</button>
    <a href="/Accessories/Index" class="btn btn-secondary">Cancel</a>
</form>