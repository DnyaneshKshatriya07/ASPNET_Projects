@model AeroDroxUAV.Models.Accessories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add New Accessory";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-gradient-success text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-tools fa-2x"></i>
                        </div>
                        <div>
                            <h1 class="h3 mb-0">Add New Accessory</h1>
                            <p class="mb-0 opacity-75">Enter accessory details below</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form method="post" asp-controller="Accessories" asp-action="Create" enctype="multipart/form-data" id="accessoryForm">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" 
                                           id="name" placeholder="Enter accessory name" required />
                                    <label for="name">
                                        <i class="fas fa-cube me-2"></i>Accessory Name
                                    </label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Type" class="form-control" 
                                           id="type" placeholder="Enter accessory type" required />
                                    <label for="type">
                                        <i class="fas fa-tag me-2"></i>Type
                                    </label>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Price" step="0.01" 
                                           class="form-control" id="price" 
                                           placeholder="Enter price" required />
                                    <label for="price">
                                        <i class="fas fa-dollar-sign me-2"></i>Price
                                    </label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="StockQuantity" class="form-control" 
                                           id="quantity" placeholder="Enter quantity" min="0" required />
                                    <label for="quantity">
                                        <i class="fas fa-boxes me-2"></i>Stock Quantity
                                    </label>
                                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Image Upload -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="imageFile" class="form-label fw-semibold">
                                        <i class="fas fa-image me-2"></i>Accessory Image
                                    </label>
                                    <input type="file" asp-for="ImageFile" class="form-control" 
                                           id="imageFile" accept="image/*">
                                    <div class="form-text">
                                        Upload a high-quality image of the accessory (JPG, PNG, max 5MB)
                                    </div>
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <div id="imagePreview" class="mt-3 text-center d-none">
                                    <img id="previewImage" class="img-thumbnail" style="max-height: 200px;" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control" 
                                          id="description" placeholder="Enter description"
                                          style="height: 150px;"></textarea>
                                <label for="description">
                                    <i class="fas fa-align-left me-2"></i>Description
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Compatibility" class="form-control" 
                                           id="compatibility" placeholder="Compatible with" />
                                    <label for="compatibility">
                                        <i class="fas fa-link me-2"></i>Compatibility
                                    </label>
                                    <div class="form-text">
                                        Compatible drone models (e.g., DJI Mavic, Parrot Anafi)
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="Condition" class="form-select" id="condition">
                                        <option value="">Select Condition</option>
                                        <option value="New">New</option>
                                        <option value="Refurbished">Refurbished</option>
                                        <option value="Used">Used</option>
                                    </select>
                                    <label for="condition">
                                        <i class="fas fa-certificate me-2"></i>Condition
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="Category" class="form-select" id="category">
                                        <option value="">Select Category</option>
                                        <option value="Batteries">Batteries</option>
                                        <option value="Propellers">Propellers</option>
                                        <option value="Controllers">Controllers</option>
                                        <option value="Cases">Cases & Bags</option>
                                        <option value="Chargers">Chargers</option>
                                        <option value="Cameras">Cameras</option>
                                        <option value="Sensors">Sensors</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label for="category">
                                        <i class="fas fa-layer-group me-2"></i>Category
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5">
                            <div>
                                <button type="submit" class="btn btn-success btn-lg px-5">
                                    <i class="fas fa-save me-2"></i>Add Accessory
                                </button>
                            </div>
                            <div>
                                <a href="/Accessories/Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Image preview
            $('#imageFile').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                        $('#imagePreview').removeClass('d-none');
                    }
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').addClass('d-none');
                }
            });

            // Form validation
            $('#accessoryForm').submit(function(e) {
                e.preventDefault();
                
                var isValid = true;
                $(this).find('[required]').each(function() {
                    if ($(this).val() === '') {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (isValid) {
                    this.submit();
                }
            });
            
            // Real-time validation
            $('input[required], textarea[required]').on('blur', function() {
                if ($(this).val() === '') {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
            
            // Price formatting
            $('#price').on('blur', function() {
                var value = parseFloat($(this).val());
                if (!isNaN(value)) {
                    $(this).val(value.toFixed(2));
                }
            });
            
            // Quantity validation
            $('#quantity').on('blur', function() {
                var value = parseInt($(this).val());
                if (value < 0) {
                    $(this).val(0);
                }
            });
        });
    </script>
    
    <style>
        .bg-gradient-success {
            background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
        }
        
        .card {
            border-radius: 20px;
            overflow: hidden;
        }
        
        .card-header {
            border-radius: 20px 20px 0 0 !important;
        }
        
        .form-floating {
            position: relative;
        }
        
        .form-control, .form-select {
            border-radius: 12px;
            border: 2px solid #e0e0e0;
            padding: 16px 12px 4px 12px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #20c997;
            box-shadow: 0 0 0 0.2rem rgba(32, 201, 151, 0.25);
        }
        
        .form-control.is-invalid {
            border-color: #dc3545;
        }
        
        .btn-success {
            background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-success:hover {
            background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(32, 201, 151, 0.4);
        }
        
        .btn-outline-secondary {
            border-radius: 12px;
            padding: 12px 30px;
            border-width: 2px;
        }
        
        .form-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
        
        label {
            font-weight: 500;
        }
    </style>
}