@{
    ViewData["Title"] = "Contact Us - AeroDrox UAV";
}

<style>
    .contact-hero {
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.5) 100%), 
                    url('https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80') 
                    no-repeat center center;
        background-size: cover;
        color: white;
        padding: 100px 0 60px;
        text-align: center;
        border-radius: 0 0 20px 20px;
        margin-bottom: 40px;
    }
    
    .contact-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-bottom: 50px;
    }
    
    .contact-sidebar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px;
        height: 100%;
    }
    
    .contact-info-item {
        margin-bottom: 30px;
    }
    
    .contact-info-item i {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        font-size: 1.2rem;
    }
    
    .contact-form {
        padding: 40px;
    }
    
    .form-control-lg {
        border-radius: 10px;
        border: 2px solid #e0e0e0;
        padding: 15px;
        transition: all 0.3s ease;
    }
    
    .form-control-lg:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 15px 30px;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-gradient-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }
    
    .map-container {
        border-radius: 15px;
        overflow: hidden;
        margin-top: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    .faq-section {
        margin-top: 60px;
    }
    
    .faq-item {
        margin-bottom: 20px;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .faq-question {
        padding: 20px;
        background: #f8f9fa;
        cursor: pointer;
        font-weight: 600;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .faq-answer {
        padding: 20px;
        display: none;
    }
    
    .social-links a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        margin-right: 10px;
        color: white;
        transition: all 0.3s ease;
    }
    
    .social-links a:hover {
        background: white;
        color: #667eea;
        transform: translateY(-3px);
    }
    
    .alert-success {
        border-radius: 10px;
        border: none;
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%);
        color: white;
    }
</style>

<!-- Hero Section -->
<section class="contact-hero">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
        <p class="lead mb-0">Get in touch with our team for expert drone solutions</p>
    </div>
</section>

<div class="container">
    <!-- Main Contact Container -->
    <div class="contact-container">
        <div class="row g-0">
            <!-- Contact Information Sidebar -->
            <div class="col-lg-5">
                <div class="contact-sidebar">
                    <h3 class="fw-bold mb-4">
                        <i class="fas fa-headset me-2"></i>Get In Touch
                    </h3>
                    <p class="mb-5 opacity-75">
                        Our team is ready to assist you with any questions about our drones, services, or training programs.
                    </p>
                    
                    <div class="contact-info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <h5 class="fw-bold mb-2">Our Location</h5>
                        <p class="mb-0 opacity-75">
                            123 Tech Street<br>
                            Innovation City, IC 10101<br>
                            United States
                        </p>
                    </div>
                    
                    <div class="contact-info-item">
                        <i class="fas fa-phone"></i>
                        <h5 class="fw-bold mb-2">Phone Number</h5>
                        <p class="mb-0 opacity-75">
                            <strong>Sales:</strong> +1 (555) 123-4567<br>
                            <strong>Support:</strong> +1 (555) 987-6543
                        </p>
                    </div>
                    
                    <div class="contact-info-item">
                        <i class="fas fa-envelope"></i>
                        <h5 class="fw-bold mb-2">Email Address</h5>
                        <p class="mb-0 opacity-75">
                            <strong>General:</strong> info@aerodrox.com<br>
                            <strong>Support:</strong> support@aerodrox.com<br>
                            <strong>Sales:</strong> sales@aerodrox.com
                        </p>
                    </div>
                    
                    <div class="contact-info-item">
                        <i class="fas fa-clock"></i>
                        <h5 class="fw-bold mb-2">Business Hours</h5>
                        <p class="mb-0 opacity-75">
                            <strong>Mon-Fri:</strong> 9:00 AM - 6:00 PM<br>
                            <strong>Saturday:</strong> 10:00 AM - 4:00 PM<br>
                            <strong>Sunday:</strong> Closed
                        </p>
                    </div>
                    
                    <div class="mt-5">
                        <h5 class="fw-bold mb-3">Follow Us</h5>
                        <div class="social-links">
                            <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                            <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                            <a href="#" title="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                            <a href="#" title="YouTube"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="contact-form">
                    <h3 class="fw-bold mb-4">
                        <i class="fas fa-envelope me-2"></i>Send Us a Message
                    </h3>
                    
                    @if(ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle fa-2x me-3"></i>
                                <div>
                                    <h5 class="alert-heading mb-1">Message Sent Successfully!</h5>
                                    <p class="mb-0">@ViewBag.SuccessMessage</p>
                                </div>
                            </div>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form method="post" asp-controller="Contact" asp-action="Submit" id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="name" class="form-label fw-semibold">
                                    <i class="fas fa-user me-2"></i>Your Name *
                                </label>
                                <input type="text" name="name" id="name" class="form-control form-control-lg" 
                                       placeholder="John Doe" required>
                                <div class="invalid-feedback">Please enter your name.</div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <label for="email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2"></i>Email Address *
                                </label>
                                <input type="email" name="email" id="email" class="form-control form-control-lg" 
                                       placeholder="john@example.com" required>
                                <div class="invalid-feedback">Please enter a valid email address.</div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="phone" class="form-label fw-semibold">
                                    <i class="fas fa-phone me-2"></i>Phone Number
                                </label>
                                <input type="tel" name="phone" id="phone" class="form-control form-control-lg" 
                                       placeholder="+1 (555) 123-4567">
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <label for="company" class="form-label fw-semibold">
                                    <i class="fas fa-building me-2"></i>Company/Organization
                                </label>
                                <input type="text" name="company" id="company" class="form-control form-control-lg" 
                                       placeholder="Your Company Name">
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="subject" class="form-label fw-semibold">
                                <i class="fas fa-tag me-2"></i>Subject *
                            </label>
                            <select name="subject" id="subject" class="form-select form-select-lg" required>
                                <option value="">Select a subject</option>
                                <option value="general">General Inquiry</option>
                                <option value="sales">Sales & Pricing</option>
                                <option value="support">Technical Support</option>
                                <option value="service">Service Request</option>
                                <option value="training">Training Inquiry</option>
                                <option value="partnership">Partnership Opportunity</option>
                                <option value="other">Other</option>
                            </select>
                            <div class="invalid-feedback">Please select a subject.</div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="message" class="form-label fw-semibold">
                                <i class="fas fa-comment-dots me-2"></i>Your Message *
                            </label>
                            <textarea name="message" id="message" rows="6" 
                                      class="form-control form-control-lg" 
                                      placeholder="Please describe your inquiry in detail..." 
                                      required></textarea>
                            <div class="invalid-feedback">Please enter your message.</div>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="newsletter" name="newsletter" checked>
                                <label class="form-check-label" for="newsletter">
                                    Subscribe to our newsletter for updates and special offers
                                </label>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-gradient-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Send Message
                            </button>
                        </div>
                        
                        <p class="text-muted small mt-3">
                            <i class="fas fa-info-circle me-1"></i>
                            Fields marked with * are required. We typically respond within 24 hours.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Map Section -->
    <div class="map-container">
        <div class="ratio ratio-16x9">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.2219901290355!2d-74.00369368400567!3d40.71312937933185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a3163006c5d%3A0x7e3c7b7b7b7b7b7b!2sTech+Street%2C+New+York%2C+NY%2C+USA!5e0!3m2!1sen!2sus!4v1623941212121!5m2!1sen!2sus" 
                    style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
    
    <!-- FAQ Section -->
    <div class="faq-section">
        <h3 class="text-center mb-5 display-6 fw-bold">
            <i class="fas fa-question-circle me-2"></i>Frequently Asked Questions
        </h3>
        
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="faq-item">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>What types of drone services do you offer?</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>We offer a wide range of drone services including aerial photography & videography, infrastructure inspection, 3D mapping & modeling, agricultural surveying, search & rescue operations, and professional drone training programs.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>Do I need a license to operate your drones?</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Yes, for commercial operations in the US, you need a Part 107 Remote Pilot Certificate from the FAA. We provide training to help you obtain this certification. For recreational use, basic drone registration may be required depending on weight.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>What is your typical response time for inquiries?</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>We strive to respond to all inquiries within 24 hours during business days. For urgent matters, please call our support line for immediate assistance. Emergency service requests are prioritized for rapid response.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>Do you provide drone repair services?</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Yes, we offer comprehensive drone repair and maintenance services for all major brands. Our certified technicians can handle everything from minor repairs to complete overhauls. We also offer maintenance plans for regular upkeep.</p>
                    </div>
                </div>
                
                <div class="faq-item">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>Can you customize drones for specific applications?</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="faq-answer">
                        <p>Absolutely! We specialize in custom drone solutions for specific industry needs. Whether you need specialized sensors, extended flight time, payload capacity modifications, or custom software integration, our engineering team can develop solutions tailored to your requirements.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form validation
            $('#contactForm').submit(function(e) {
                e.preventDefault();
                
                var isValid = true;
                $(this).find('[required]').each(function() {
                    if ($(this).val() === '') {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (isValid) {
                    this.submit();
                }
            });
            
            // Real-time validation
            $('input[required], textarea[required], select[required]').on('blur', function() {
                if ($(this).val() === '') {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
            
            // Phone number formatting
            $('#phone').on('input', function() {
                this.value = this.value.replace(/[^0-9+\-\s()]/g, '');
            });
        });
        
        // FAQ toggle function
        function toggleFAQ(element) {
            var answer = $(element).next('.faq-answer');
            var icon = $(element).find('i');
            
            if (answer.is(':visible')) {
                answer.slideUp();
                icon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
            } else {
                // Close all other FAQs
                $('.faq-answer').slideUp();
                $('.faq-question i').removeClass('fa-chevron-up').addClass('fa-chevron-down');
                
                // Open this one
                answer.slideDown();
                icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
            }
        }
        
        // Auto-open first FAQ
        $(document).ready(function() {
            if ($('.faq-item').length > 0) {
                $('.faq-item:first-child .faq-question').click();
            }
        });
    </script>
}