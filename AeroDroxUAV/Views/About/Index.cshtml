@* Views/About/Index.cshtml *@
@{
    ViewData["Title"] = "About Us - AeroDrox UAV";
}

<style>
    .about-hero {
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0.7) 100%), 
                    url('https://images.unsplash.com/photo-1558618047-3c8c76ca7d13?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80') 
                    no-repeat center center;
        background-size: cover;
        color: white;
        padding: 100px 0 60px;
        text-align: center;
        border-radius: 0 0 20px 20px;
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }
    
    .about-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin-bottom: 40px;
    }
    
    .about-sidebar {
        background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
        color: white;
        padding: 40px;
        height: 100%;
        position: relative;
    }
    
    .about-sidebar::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('https://images.unsplash.com/photo-1518709268805-4e9042af2176?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80') no-repeat center center;
        background-size: cover;
        opacity: 0.1;
    }
    
    .mission-card {
        background: linear-gradient(135deg, rgba(26, 41, 128, 0.9) 0%, rgba(38, 208, 206, 0.9) 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }
    
    .team-section {
        margin-top: 60px;
        padding: 40px 0;
        background: #f8f9fa;
        border-radius: 20px;
    }
    
    .team-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        margin-bottom: 30px;
        border: 2px solid transparent;
    }
    
    .team-card:hover {
        transform: translateY(-10px);
        border-color: #26d0ce;
        box-shadow: 0 20px 40px rgba(38, 208, 206, 0.2);
    }
    
    .team-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }
    
    .team-info {
        padding: 20px;
    }
    
    .team-social {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
    }
    
    .team-social a {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #1a2980;
        transition: all 0.3s ease;
    }
    
    .team-social a:hover {
        background: #26d0ce;
        color: white;
        transform: translateY(-3px);
    }
    
    .price-tag {
        background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: bold;
        display: inline-block;
        margin: 5px;
        font-size: 0.9rem;
    }
    
    .price-tag::before {
        content: '₹ ';
        font-weight: normal;
    }
    
    .stats-section {
        background: linear-gradient(135deg, #1a2980 0%, #26d0ce 100%);
        color: white;
        padding: 60px 0;
        border-radius: 20px;
        margin: 40px 0;
    }
    
    .stat-number {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .form-control-sm {
        padding: 8px 12px;
        font-size: 0.9rem;
        border-radius: 8px;
    }
    
    .btn-sm-custom {
        padding: 8px 20px;
        font-size: 0.9rem;
        border-radius: 8px;
    }
    
    .small-map {
        height: 300px;
        border-radius: 15px;
        overflow: hidden;
        margin-top: 30px;
    }
    
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    .border-primary {
        border-color: #0d6efd !important;
    }
    
    .text-primary {
        color: #0d6efd !important;
    }
</style>

<style>
    .drone-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: #26d0ce;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: bold;
        animation: pulse-badge 2s infinite;
    }
    
    @@keyframes pulse-badge {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
</style>

<!-- Hero Section -->
