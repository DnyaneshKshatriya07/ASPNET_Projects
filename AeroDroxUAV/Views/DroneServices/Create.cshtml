@model AeroDroxUAV.Models.DroneServices
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Drone Service";
}

<h2>Add New Drone Service</h2>

<form method="post" asp-controller="DroneServices" asp-action="Create">
    <div class="mb-3">
        <label>Name</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Type</label>
        <input type="text" name="Type" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input type="number" name="Price" step="0.01" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Description</label>
        <textarea name="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Add Drone Service</button>
    <a href="/DroneServices/Index" class="btn btn-secondary">Cancel</a>
</form>