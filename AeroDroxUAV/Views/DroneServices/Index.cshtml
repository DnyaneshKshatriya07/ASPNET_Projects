@model IEnumerable<AeroDroxUAV.Models.DroneServices>
@{
    ViewData["Title"] = "Drone Services";
    var role = ViewBag.Role as string;
}

<h2>Drone Services</h2>

@if(role == "Admin")
{
    <a href="/DroneServices/Create" class="btn btn-success mb-2">Add Drone Service</a>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Description</th>
            @if(role == "Admin") { <th>Actions</th> }
        </tr>
    </thead>
    <tbody>
        @foreach(var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Type</td>
                <td>@service.Price</td>
                <td>@service.Description</td>
                @if(role == "Admin")
                {
                    <td>
                        <a href="/DroneServices/Edit/@service.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/DroneServices/Delete/@service.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>