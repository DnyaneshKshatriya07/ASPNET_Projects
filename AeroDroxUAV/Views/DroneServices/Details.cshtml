@model AeroDroxUAV.Models.DroneServices

@{
    ViewData["Title"] = @Model.Name;
    var isLoggedIn = !string.IsNullOrEmpty(Context.Session.GetString("Username"));
}

<div class="container py-4">
    <div class="row">
        <!-- Service Details Card -->
        <div class="col-lg-8">
            <div class="card shadow border-0 mb-3">
                <!-- Service Image -->
                <div class="position-relative" style="height: 300px; overflow: hidden; border-radius: 12px 12px 0 0;">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="w-100 h-100" alt="@Model.Name" 
                             style="object-fit: cover;">
                    }
                    else
                    {
                        <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                            <i class="fas fa-concierge-bell fa-3x text-muted"></i>
                        </div>
                    }
                    
                    <!-- Category Badge -->
                    <div class="position-absolute top-0 start-0 m-3">
                        <span class="badge bg-primary">@Model.Category</span>
                    </div>
                    
                    <!-- Status Badge -->
                    <div class="position-absolute top-0 end-0 m-3">
                        @if(Model.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Available
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-times-circle me-1"></i>Unavailable
                            </span>
                        }
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <h1 class="h3 mb-2">@Model.Name</h1>
                    
                    <!-- Service Description -->
                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="fas fa-align-left me-2 text-primary"></i>Service Description
                        </h5>
                        <div class="p-3 bg-light rounded">
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    </div>

                    <!-- Service Benefits -->
                    @if(!string.IsNullOrEmpty(Model.Benefits))
                    {
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-star me-2 text-warning"></i>Service Benefits
                            </h5>
                            <div class="row">
                                @{
                                    var benefits = Model.Benefits.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                    foreach(var benefit in benefits)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="d-flex align-items-start">
                                                <div class="me-2 pt-1">
                                                    <i class="fas fa-check-circle text-success fa-sm"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@benefit.Trim()</h6>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4 pt-3 border-top">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="DroneServices" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Back to Services
                            </a>
                            <div class="d-flex gap-3">
                                <a href="/Contact/Index" class="btn btn-primary btn-sm">
                                    <i class="fas fa-calendar-check me-1"></i>Book Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Service Info Card -->
            <div class="card shadow border-0 mb-3">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Service Information
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                            <div>
                                <i class="fas fa-hashtag me-2 text-muted fa-sm"></i>
                                <span class="fw-semibold">Service ID</span>
                            </div>
                            <span class="badge bg-light text-dark small">@Model.Id</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                            <div>
                                <i class="fas fa-layer-group me-2 text-muted fa-sm"></i>
                                <span class="fw-semibold">Category</span>
                            </div>
                            <span class="badge bg-primary small">@Model.Category</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                            <div>
                                <i class="fas fa-clock me-2 text-muted fa-sm"></i>
                                <span class="fw-semibold">Duration</span>
                            </div>
                            <span class="small">2-4 Hours</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                            <div>
                                <i class="fas fa-calendar-alt me-2 text-muted fa-sm"></i>
                                <span class="fw-semibold">Created</span>
                            </div>
                            <span class="small">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Contact Card -->
            <div class="card shadow border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-headset me-2 text-primary"></i>Need Help?
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">Have questions about this service? Contact our support team.</p>
                    <a href="/Contact/Index" class="btn btn-outline-primary btn-sm w-100 mb-2">
                        <i class="fas fa-envelope me-1"></i>Contact Support
                    </a>
                    <div class="text-center">
                        <p class="text-muted small mb-0">
                            <i class="fas fa-phone me-1 fa-sm"></i>
                            Call: (555) 123-4567
                        </p>
                        <p class="text-muted small mb-0">
                            <i class="fas fa-envelope me-1 fa-sm"></i>
                            support@aerodrox.com
                        </p>
                    </div>
                </div>
            </div>

            <!-- Admin Actions -->
            @if (ViewBag.Role == "Admin")
            {
                <div class="card shadow border-0 mt-3">
                    <div class="card-header bg-warning text-dark py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-user-cog me-2"></i>Admin Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit Service
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash me-1"></i>Delete Service
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.25em 0.6em;
        border-radius: 50px;
    }
    
    .bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }
    
    .bg-success {
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%) !important;
    }
    
    .bg-light {
        background-color: #f8f9fa !important;
    }
    
    .btn-primary, .btn-warning, .btn-outline-secondary {
        font-size: 0.875rem;
        padding: 0.375rem 0.75rem;
        border-radius: 8px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        font-weight: 500;
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #fbb034 0%, #ffdd00 100%);
        border: none;
        color: #000;
        font-weight: 500;
    }
    
    h1, h2, h3, h4, h5, h6 {
        font-weight: 600;
    }
    
    .list-group-item {
        background-color: transparent;
        font-size: 0.9rem;
    }
</style>