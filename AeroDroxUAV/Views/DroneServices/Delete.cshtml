@model AeroDroxUAV.Models.DroneServices
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Drone Service";
}

<h2>Delete Drone Service</h2>

<p>Are you sure you want to delete this drone service?</p>

<div>
    <h4>@Model.Name (@Model.Type)</h4>
    <p>Price: @Model.Price</p>
    <p>Description: @Model.Description</p>
</div>

<form method="post" asp-controller="DroneServices" asp-action="Delete">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/DroneServices/Index" class="btn btn-secondary">Cancel</a>
</form>