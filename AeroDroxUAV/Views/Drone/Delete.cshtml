@model AeroDroxUAV.Models.Drone
@{
    ViewData["Title"] = "Delete Drone";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <div>
                            <h1 class="h4 mb-0">Delete Drone</h1>
                            <p class="mb-0 opacity-75 small">Confirm deletion of drone</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-warning p-3">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-exclamation-circle fa-2x text-warning"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading h6">Warning!</h5>
                                <p class="mb-0 small">You are about to delete a drone. This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>

                    <div class="drone-details p-3 mb-3 rounded" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                        <h4 class="text-center mb-3">
                            <i class="fas fa-drone text-primary me-2"></i>@Model.Name
                            <small class="text-muted d-block mt-1 small">(@Model.Condition)</small>
                        </h4>
                        
                        <div class="row text-center">
                            <div class="col-md-6 mb-2">
                                <div class="p-2 bg-white rounded shadow-sm">
                                    <h6 class="text-muted mb-1 small">
                                        <i class="fas fa-rupee-sign me-1"></i>Price
                                    </h6>
                                    @if (Model.DiscountPrice.HasValue && Model.DiscountPrice > 0)
                                    {
                                        <h4 class="text-danger fw-bold h5">₹@Model.DiscountPrice.Value.ToString("N2")</h4>
                                        <small class="text-muted text-decoration-line-through small">₹@Model.Price.ToString("N2")</small>
                                    }
                                    else
                                    {
                                        <h4 class="text-success fw-bold h5">₹@Model.Price.ToString("N2")</h4>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6 mb-2">
                                <div class="p-2 bg-white rounded shadow-sm">
                                    <h6 class="text-muted mb-1 small">
                                        <i class="fas fa-info-circle me-1"></i>Status
                                    </h6>
                                    <h4>
                                        <span class="badge bg-primary small">@Model.Condition</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <h6 class="text-muted mb-1 small">
                                <i class="fas fa-align-left me-1"></i>Description
                            </h6>
                            <div class="p-2 bg-white rounded shadow-sm">
                                <p class="mb-0 small">@Model.Description</p>
                            </div>
                        </div>
                    </div>

                    <form method="post" id="deleteForm">
                        <div class="text-center">
                            <h5 class="mb-3 text-danger h6">
                                <i class="fas fa-question-circle me-2"></i>
                                Are you sure you want to delete this drone?
                            </h5>
                            
                            <div class="d-flex justify-content-center gap-2">
                                <button type="submit" class="btn btn-danger px-4">
                                    <i class="fas fa-trash me-2"></i>Yes, Delete Drone
                                </button>
                                <a href="/Drone/Index" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                            
                            <p class="text-muted mt-3 small">
                                <i class="fas fa-info-circle me-1"></i>
                                This action will permanently remove the drone from the system.
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        overflow: hidden;
    }
    
    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }
    
    .bg-danger {
        background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
    }
    
    .alert-warning {
        border-radius: 8px;
        border-left: 4px solid #ffc107;
    }
    
    .drone-details {
        border: 2px dashed #dee2e6;
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .btn-danger:hover {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(245, 87, 108, 0.3);
    }
    
    .btn-outline-secondary {
        border-radius: 8px;
        padding: 8px 20px;
        border-width: 2px;
        font-size: 0.9rem;
    }
    
    .badge {
        font-size: 0.8rem;
        padding: 0.4em 0.8em;
        border-radius: 50px;
    }
    
    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
    
    .text-decoration-line-through {
        text-decoration: line-through !important;
    }
    
    .small {
        font-size: 0.875rem;
    }
    
    .h4 {
        font-size: 1.25rem;
    }
    
    .h5 {
        font-size: 1.1rem;
    }
    
    .h6 {
        font-size: 1rem;
    }
</style>